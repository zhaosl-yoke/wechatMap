/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}

.citypicker{
  z-index: 999;
  position: fixed;
  height: 100%;
  width: 100%;
  top:0;
  left:0;
  bottom:0;
  right:0;
  min-height: 100%;
  background: rgba(0,0,0,.6);
}
.citybody {
  position: fixed;
  bottom: 0px;
  z-index: 999;
  background: #fff;
}

.cityheader {
   position: absolute;
  top:0px; 
  height:80rpx;
  width: 100%;
  z-index: 4;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}

