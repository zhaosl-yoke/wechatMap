/* pages/uploadtea/uploadtea.wxss */
page{
    height: 100%;
	width: 100%;
	font-size: 28rpx;
	font-family:"苹方-简","华文细黑","微软雅黑", "Microsoft YaHei","sans-serif";
	background: #fff;	
	color: #333;
}
#contain .video,#contain .video2,#contain .img2{
	position: relative;
	height: 425rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
}

#contain .img2 .pic{
	width: 100%;
	height: auto;
}
.video #upload_video{
	opacity: 0;
    width: 100%;
    height: 100%;
    z-index: 999;
}
.video .icon{
	position: absolute;
	top: 139rpx;
	width: 108rpx;
	margin-left: -54rpx;
	left: 50%;
}
.video .poster{
  width: 100%;
  height: 425rpx; 
}
.video video{
   width: 100%;
  height: 425rpx; 
}
.video .text{
	position: absolute;
	top: 254rpx;	
}
.video .size{
	position: absolute;
	top: 300rpx;
	color: #999;
	font-size: 24rpx;	
}
.title {
	height: 134rpx;
	padding-left: 20rpx;
	display: flex;
	align-items: center;
	border-bottom: solid 1px #eee;
}
.title input{
	display: block;
    width: 100%;
    border: none;    
    outline: none;
}
.video2 video{
	width: 100%;
	height: 100%;
}
.publish{
	position: absolute;
	width: 712rpx;
	height: 88rpx;
	bottom: 50rpx;
	left: 50%;
	background: #f44a33;
	margin-left: -356rpx;
	line-height: 88rpx;
	text-align: center;
	border-radius: 5rpx;
	color: #fff;
	font-size: 30rpx;
	
}