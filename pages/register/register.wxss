@import "../../libs/common.wxss";
@import '../../libs/icon.wxss';
page{
  font-family:"苹方-简","华文细黑","微软雅黑", "Microsoft YaHei","sans-serif"; 
}
.placeholder{
  color: #ffffff;
  font-size: 28rpx;
}
.contain{
  width:100%;
	height:100vh;
  text-align: center;
  padding: 0 60rpx;
  padding-top:100rpx;
  background:url(https://zslzhaoshuli.github.io/json/bg.png) no-repeat center center;
  background-size:cover;
  box-sizing: border-box;
}
#logo{
  width:210rpx;
}
#title{
  width:312rpx;
  display: block;
  margin:15rpx auto;
  }

.login{
  width:620rpx;
  margin:0 auto;
  box-sizing:border-box;
  padding:0  35rpx; 
  margin-top: 60rpx;
  position: relative;
  background:rgba(0,0,0,0.3);
  color:#fff;
  border-radius: 15rpx;
}
.login .input {
    position: relative;
    height: 125rpx;
    display: -webkit-box;
    color: #fff;
    display: flex;
    align-items:center;
}
.error:after{
  font-family:"iconfont" !important;
  font-size: 24px;
  font-style:normal;
  content: '\e600';
  color: #ffffff;
  padding-right: 10px;
  vertical-align: middle;
  box-sizing: border-box;
}

.login .input:nth-child(1){
	 border-bottom:1rpx solid #fff;
}
.login .input .left {
    width: 100rpx;
    display: flex;
    justify-content:center ;
    align-items:center;
}

.left image{
	width:28rpx;
}
.input input {
    margin-top: 10rpx;
	  width:400rpx;
    height:35rpx;
    background:none;
    border:none;
    color: #fff;
    text-align: left;
}

