.confirm{
	margin-top:100rpx;
}

.login .info1,.info2{
  position:absolute;
  top:80rpx;
  font-size:24rpx;
  color:#F44933;
  opacity: 1!important;
  text-align: left;
  display: none;
  left:120rpx;
}
#msg{
  width: 285rpx;
}
.receive{
  background: #f44933;
  padding: 20rpx 12rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
}


.animate{
  width: 100%;
  height: 84rpx;
  position: absolute;
  right: -620rpx;
  top: 40rpx;
  background: rgba(116,163,237,0.7);
  border-radius: 40rpx 0 0rpx 40rpx;
  display: flex;
  align-items: center;
}
.less{ 
  width: 60rpx;
  height: 60rpx;
}
.less1{
  margin-left: 20rpx;
}
.less2{
  margin-left: -30rpx;
}
.eidt{
  align-self: center;
  font-size: 30rpx;
  color: #fff;
  margin-left: 60rpx;
}
.eidt text{
  font-size: 36rpx;
}
.close_icon:after{
  font-family:"iconfont" !important;
  font-size:24px;
  font-style:normal;
  content: '\e600';
  margin-left: 40rpx;
  color: #fff;
  font-weight: normal;
}
.login2{
  display: inline;
}