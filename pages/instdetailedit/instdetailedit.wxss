/* pages/instdetail/instdetail.wxss */
page{
	height: 100%;
	width: 100%;
	font-size: 28rpx;
	font-family:"苹方-简","华文细黑","微软雅黑", "Microsoft YaHei","sans-serif";
	background: #fafafa;	
	color: #333;
    position: relative;
}



body,html{
	background: #fff;
}
.shadow,.shadow2{
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	background: rgba(0,0,0,0.5);
	z-index: 99;
}
.shadow_con,.shadow_con2 {
	position: absolute;
	top: 400rpx;
	left: 50%;
	margin-left: -355rpx;
	z-index: 999;
	width: 710rpx;
	padding: 80rpx 15rpx 20rpx 15rpx;
	border-radius: 0.05rpx;
	background: #fff;
	box-sizing: border-box;
	height: 500rpx;
	overflow: auto;
}
.shadow_con .cancel{
	position: absolute;
	width: 56rpx;
	left: 20rpx;
	top: 25rpx;
}
.shadow_con ul,.shadow_con2 ul{
	display: flex;
	flex-wrap: wrap;
}
.shadow_con ul li,.shadow_con2 .item{
	list-style: none;
	display: inline-block;
	padding: 0 20rpx;
	height: 60rpx;
	border: solid 1px #ccc;
	line-height: 60rpx;
	border-radius: 5rpx;
	margin: 20rpx 5rpx;
	font-size: 24rpx;
	box-sizing: border-box;
}
.shadow_con2 .is_checked {
    color: #f44a33;
    border:solid 1px #f44a33;
}
.shadow_con ul .active,.shadow_con2 ul .active{
	color: #f44a33;
	border: solid 1px #f44a33;
}
.shadow_con2{
	padding-top: 40rpx;
}
.shadow_con2 .top .cancel{
	width: 40rpx;
}
.shadow_con2 .top{
	height: 60rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.shadow_con2 .top span{
	padding: 10rpx;
    background: #f44a33;
    color: #fff;
    border-radius: 5rpx;
    margin-right: 20rpx;
    font-size: 24rpx;
}
.border{
	width: 100%;
	height: 20rpx;
	background: #fafafa;
}
.choose_school{
	height: 90rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	background: #fff;
	padding: 0 20rpx;
}
.choose_school .choose image{
	width: 16rpx;
	margin-left: 22rpx;
}
.choose_school .choose{
	display: flex;
	align-items: center;
}
.inst_msg{
	padding: 7rpx 20rpx 24rpx 20rpx;
	background: #fff;
}
.inst_msg .title{
	display: flex;
	height: 92rpx;
	align-items: center;
	justify-content: space-between;
}
.inst_msg .title image {
	width: 30rpx;
}
.inst_msg .title .address{
	color: #333;
	flex: 1;
}
.inst_intro p{
	line-height: 40rpx;
	font-size: 26rpx;
    color: #666;
}
.inst_major{
	padding-bottom: 30rpx;
	background: #fff;
	padding-left: 20rpx;
}
.inst_major #add{
	font-size: 40rpx;
	width: 60rpx;
}
.inst_major p{
	line-height: 78rpx;
}
.inst_major ul {
	display: flex;
	list-style: none;
	flex-wrap: wrap;
}
.inst_major ul li{
	position: relative;
	height: 60rpx;
	padding: 0 30rpx;
	margin-right: 15rpx;
	background: #f5f5f5;
	text-align: center;
	line-height: 60rpx;
	border-radius: 5rpx;
	color: #666;
	margin-bottom: 20rpx;
	font-size: 26rpx;
}
.blackboard{
	background: #fff;
	padding: 10rpx 20rpx 20rpx 20rpx;
}
.blackboard .title{
	height: 70rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.blackboard .title image{
	width: 30rpx;
}
.blackboard .board_msg{
	display: flex;
	height: 55rpx;
	align-items: center;
}
.board_msg image{
	width: 32rpx;
	margin-right: 13rpx;
}
.board_msg p{
	flex: 1;
	font-size: 26rpx;
    color: #666;
}
.board_msg span{
	margin-right: 23rpx;
}
.tea_video{
	padding: 0 20rpx 30rpx 20rpx;
	background: #fff;
	box-sizing: border-box;
}
.tea_video .title{
	height: 90rpx;
	display: flex;
	align-items: center;
	justify-content: space-between; 
}
.tea_video .title image{
	width: 16rpx;
}
.tea_video ul{
	display: flex;
	flex-wrap: wrap;
}
.tea_video ul li:nth-last-child(1) {
	margin-right: 0;
}
.tea_video ul #add_video{
	width: 200rpx;
	height: 204rpx;
	border: dashed 1px #999;
	border-radius: 5rpx;
	background: #eeeeee;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-left: 10rpx;
}
.tea_video ul #add_video image{
	width: 66rpx;
}
.tea_video ul #add_video span{
	font-size: 24rpx;
	margin-top: 20rpx;
}
.tea_video ul li{
	margin-right: 20rpx;
	padding-bottom: 4rpx;
	width: 223rpx;
    height: 126rpx;
}
.tea_video ul li .video{
	position: relative;
	width: 223rpx;
	height: 126rpx;
	background: url(../../image/bg.png) no-repeat;
	background-size: cover;
	background-position: center;
	border-radius: 5rpx;
}
.video image {
    width:223rpx;
    height:126rpx;
}

.tea_video ul li .video .play{
	position: absolute;
	width: 50rpx;
    top: 50%;
    left: 50%;
    margin-left: -25rpx;
    margin-top: -25rpx;
}
.tea_video ul li .text{
	line-height: 36rpx;
	margin-top: 15rpx;
	font-size: 24rpx;
}
.tea_video .look_more{
	height: 42rpx;
	display: flex;
	justify-content: center;
}
.tea_video .look_more span{
	line-height: 42rpx;
	color: #9a9a9a;
	font-size: 24rpx;
	border-bottom: solid 1px #999;
}
.detail_msg{
	padding: 0 20rpx;
	background: #fff;
	padding-bottom: 20rpx;
}
.detail_msg .title{
	height: 88rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.detail_msg .title image{
	width: 30rpx;
}
.detail_msg .con view{
	line-height: 50rpx;
	font-size: 26rpx;
    color: #666;
}
.delete{
	position: absolute;
	width: 15rpx;
	right: 6rpx;
	top: 6rpx;
}
.mui-ellipsis-1{
	display: -webkit-box;
    overflow: hidden;
    white-space: normal!important;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}