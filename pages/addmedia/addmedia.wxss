@import '../../libs/icon.wxss';
@import '../../image_uploader/image_uploader.wxss';
page{
  box-sizing: border-box;
  font-family:"苹方-简","华文细黑","微软雅黑", "Microsoft YaHei","sans-serif"; 
  font-size: 32rpx;
  background: #ccc;
}
.shadow{
	position: fixed;
	left: 0;
	top: 0;
	bottom: 0;
	right: 0;
	background: rgba(0,0,0,0.5);
	z-index: 999;
}
.shadow .box{
	position: relative;
	background: #fff;
	width: 0rpx;
	margin: 0 auto;
	margin-top: 300rpx;
	padding: 40rpx;
	border-radius: 20rpx;
	padding-top: 80rpx;
}
.box .close{
	position: absolute;
	top: 20rpx;
	right: 20rpx;
	width: 35rpx;
}
.shadow .box p{
	line-height: 40rpx;
}
.shadow .box button{
	background: #f44933;
	color: #fff;
	width: 100%;
	height: 60rpx;
	border: none;
	outline: none;
	margin-top: 40rpx;
}
.container{
	height: 100%;
	position: relative;
}
.addVideo,.addPic{
	margin-bottom: 30rpx;
	background: #fff;
	padding: 0 10rpx;
}
.addVideo .videoTop,.addPic .picTop{
	line-height: 80rpx;
	height: 80rpx;
	border-bottom: solid 2px #ccc;
	padding: 0 20rpx;
}
.videoTop text:nth-of-type(1) {
	font-size: 30rpx;
}
.videoTop text:nth-of-type(2) {
	font-size: 24rpx;
	color: #ccc;
	margin-left: 20rpx;
}
.picTop text:nth-of-type(1) {
	font-size: 30rpx;
}
.picTop text:nth-of-type(2) {
	font-size: 24rpx;
	color: #ccc;
	margin-left: 20rpx;
}
.videoPoster,.pic{
	padding: 40rpx 20rpx;
}
.videoPoster .add,.pic .add{
	width: 200rpx;
	height: 200rpx;
	background: url(../img/pic.png) no-repeat;
	background-size: cover;
}
.videoPoster .add input,.pic .add input{
	opacity: 0;
	width: 100%;
	height: 100%;
}
.prompt{
	padding: 10rpx 20rpx;
	padding-right: 0;
}
.prompt span{
	line-height: 40rpx;
}
.bot{
	width: 100%;
	position: absolute;
	bottom: 0;
	left: 0;
}
.bot p{
	width: 100%;
	background: #f44933;
	height: 80rpx;
	line-height: 80rpx;
	color: #fff;
	font-size:28rpx;
	text-align: center;
}
.submit{
  background: #f44933;
  border-radius: 0;
  color: #fff;
}