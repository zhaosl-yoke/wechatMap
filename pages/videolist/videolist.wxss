/* pages/videolist/videolist.wxss */
page{
    height: 100%;
	width: 100%;
	font-size: 28rpx;
	font-family:"苹方-简","华文细黑","微软雅黑", "Microsoft YaHei","sans-serif";
	background: #fff;	
	color: #333;
}
.contain{
	padding-left: 20rpx;
	/* padding-bottom: 100rpx;    */
	display: flex;
}
.box{
	flex: 1;
	position: relative;
	overflow: hidden;
}
scroll-view{
    display:flex;
flex-wrap:wrap;

}
.video_list{
	display: flex;
	flex-wrap: wrap;
}
.video_list li{
    display: inline-block;
	margin: 30rpx 20rpx 0 0;
	padding-bottom: 4rpx;
	width: 344rpx;
}
.video_list li .video{
	position: relative;
	width: 344rpx;
	height: 200rpx;
	border-radius: 5rpx;
}
.video_list li .video .bg_img{
    width:344rpx;
    height:200rpx;
}
.video_list li .video .play{
	position: absolute;
	width: 60rpx;
    top: 50%;
    left: 50%;
    margin-left: -30rpx;
    margin-top: -30rpx;
}
.video_list li .text{
	line-height: 36rpx;
	margin-top: 15rpx;
	font-size: 24rpx;
}

.video .checkbox image{
	position: absolute;
	top: 5rpx;
	right: 5rpx;
	width: 50rpx;
}
.bottom{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 87rpx;
	padding: 0 20rpx;
	background: #f5f5f5;
	border-top: solid 1px #eee;
	display: flex;
	align-items: center;
	color: #9a9a9a;
}
.bottom .all{
	margin-right: 50rpx;
}
.bottom .to_top{
	flex: 1;
}
.bottom .delete{
	margin-right: 40rpx;
}